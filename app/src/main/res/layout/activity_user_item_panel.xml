<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="@drawable/button_main_colour"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_panel"
        android:layout_weight="80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_thumbnail"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/user_text_name"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14dp"
            android:letterSpacing="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_text_position"
            android:fontFamily="sans-serif"
            android:textColor="#333333"
            android:textSize="12dp"
            android:letterSpacing="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_text_contact"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:textColor="#009900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>