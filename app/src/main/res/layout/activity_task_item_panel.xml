<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="@drawable/button_main_colour"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/task_item_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/task_item_add"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_btn_plus"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:id="@+id/task_item_text"
            android:layout_weight="80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/task_item_add"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/task_item_name"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14dp"
                android:letterSpacing="0.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_item_desc"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textSize="12dp"
                android:letterSpacing="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_item_user"
                android:fontFamily="sans-serif"
                android:textSize="14dp"
                android:textColor="#000099"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_item_date"
                android:fontFamily="sans-serif"
                android:textSize="14dp"
                android:textColor="#009900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_item_duedate"
                android:fontFamily="sans-serif"
                android:textSize="14dp"
                android:textColor="#990000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <!--Do Collapsible For More Details, Linear Layout, Use The Animation Utils-->
    <LinearLayout
        android:id="@+id/task_item_subtasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">

    </LinearLayout>
</LinearLayout>